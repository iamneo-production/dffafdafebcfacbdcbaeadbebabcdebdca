@model dotnetapp.Models.Book

<h2 class="text-center">Book Details</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <dl class="dl-horizontal">
                        <dt>Id:</dt>
                        <dd>@Model.BookID</dd>
                        <dt>Title:</dt>
                        <dd>@Model.Title</dd>
                        <dt>Author:</dt>
                        <dd>@Model.Author</dd>
                        <dt>Genre:</dt>
                        <dd>@Model.Genre</dd>
                        <dt>Price:</dt>
                        <dd>@Model.Price</dd>
                        <dt>Quantity:</dt>
                        <dd>@Model.Quantity</dd>
                    </dl>
                </div>
            </div>
            <div class="mt-3 text-center">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>

<style>
    .dl-horizontal dt {
        float: left;
        width: 120px;
        clear: left;
        text-align: right;
        margin-right: 10px;
        font-weight: bold;
    }

    .dl-horizontal dd {
        margin-left: 140px;
    }

    .card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
