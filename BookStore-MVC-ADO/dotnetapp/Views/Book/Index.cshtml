@model List<dotnetapp.Models.Book>

<h2>Book List</h2>

<p>@TempData["Message"]</p>

<table class="table">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Genre</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Genre</td>
            <td>@book.Price</td>
            <td>@book.Quantity</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = book.BookID }) |
                @Html.ActionLink("Edit", "Edit", new { id = book.BookID }) |
                @Html.ActionLink("Delete", "Delete", new { id = book.BookID })
            </td>
        </tr>
    }
</table>

@Html.ActionLink("Create New Book", "Create")
